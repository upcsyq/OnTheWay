<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/square_radiobutton_selected_color"/>
            <corners android:radius="@dimen/square_radio_button_cornor_radius"/>
            <stroke android:width="@dimen/square_radio_button_stroke_width"/>
        </shape>
    </item>
    <item  android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/square_radiobutton_selected_color"/>
            <corners android:radius="@dimen/square_radio_button_cornor_radius"/>
            <stroke android:width="@dimen/square_radio_button_stroke_width"/>
        </shape>
    </item>
    <item  android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/square_radiobutton_selected_color"/>
            <corners android:radius="@dimen/square_radio_button_cornor_radius"/>
            <stroke android:width="@dimen/square_radio_button_stroke_width"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/square_radiobutton_unselected_color"/>
            <corners android:radius="@dimen/square_radio_button_cornor_radius"/>
            <stroke android:width="@dimen/square_radio_button_stroke_width"/>
        </shape>
    </item>
</selector>